# This tmux statusbar config was created by tmuxline.vim
# on Wed, 17 Jul 2019

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#d3e4e8,bg=#2b3038"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#61afef"
set -g status-style "none,bg=#21252b "
set -g message-style "fg=#d3e4e8,bg=#2b3038"
set -g pane-border-style "fg=#2b3038"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#6e797f,bg=#21252b "
set -g status-left "#[fg=#21252b ,bg=#61afef] #S #[fg=#61afef,bg=#21252b ,nobold,nounderscore,noitalics]"
set -g status-right "#[fg=#2b3038,bg=#21252b ,nobold,nounderscore,noitalics]#[fg=#97a8a8,bg=#2b3038] %Y-%m-%d  %H:%M #[fg=#839393,bg=#2b3038,nobold,nounderscore,noitalics]#[fg=#21252b ,bg=#839393] #h "
setw -g window-status-format "#[fg=#6e797f,bg=#21252b ] #I #[fg=#6e797f,bg=#21252b ] #W "
setw -g window-status-current-format "#[fg=#21252b ,bg=#2b3038,nobold,nounderscore,noitalics]#[fg=#d3e4e8,bg=#2b3038] #I #[fg=#d3e4e8,bg=#2b3038] #W #[fg=#2b3038,bg=#21252b ,nobold,nounderscore,noitalics]"
