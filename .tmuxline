# This tmux statusbar config was created by tmuxline.vim
# on Sat, 30 Oct 2021

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"
set -g message-command-style "fg=#ffffff,bg=#585858"
set -g status-right-style "none"
set -g pane-active-border-style "fg=#afdf00"
set -g status-style "none,bg=#303030"
set -g message-style "fg=#ffffff,bg=#585858"
set -g pane-border-style "fg=#585858"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none"
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#ffffff,bg=#303030"
set -g status-left ""
set -g status-right "#[fg=#606060,bg=#d0d0d0] %H:%M "
setw -g window-status-format "#[fg=#ffffff,bg=#303030] #I #[fg=#ffffff,bg=#303030]#W "
setw -g window-status-current-format "#[fg=#303030,bg=#585858,nobold,nounderscore,noitalics]#[fg=#ffffff,bg=#585858] #W #[fg=#585858,bg=#303030,nobold,nounderscore,noitalics]"
